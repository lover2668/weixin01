.classification-cloumn {
  position: relative;
  top:160px;
  left: 0;
  width: 100%;
  height: 100px;
  background: rgba(0,0,0,.4);
}

.cloumn-list {
  position: absolute;
  top: 0;
  left: 0;
  background: #fff;
  border-radius: 8rpx;
  width: auto;
  height: 100%;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
}


.cloumn-img {
  width: 30px;
  height: 30px;
  left: 5px;
  display: inline-block;
  overflow: hidden;
}

.cloumn-info {
  background-color: rgba(0,0,0,0);
  border-color: rgb(34,34,34);
  border-style: none;
  border-width: 2px;
  color: rgb(51,51,51);
  font-size: 16px;
  font-weight: bold;
  height: 22px;
  line-height: 22px;
  margin-left: 0;
  margin-top: 0;
  opacity: 1;
  text-align: left;
  position: absolute;
  left: 30px;
  top: 10px;
  margin-right: 0;
}