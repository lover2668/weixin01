.classification-cloumn {
  width: 375px;
  height: 55px;
  margin-bottom: auto;
  margin-left: 0px;
  margin-right: auto;
  margin-top: 0px;
  opacity: 1;
  background: rgba(0,0,0,.4);
}

.cloumn-list {
  position: relative;
  top: 10px;
  left: 10px;
  flex-direction: row;
  background: #fff;
  border-radius: 8rpx;
  width: 30px;
  height: 30px;
  display: block;
}

.cloumn-img-container {
  position: absolute;
  top: 0px;
  left: 0px;
  height: 30px;
  width: 30px;
  display: flex;
  flex-direction: row;
}
.cloumn-img {
  position: absolute;
  top: 0px;
  left: 0px;
  height: 100%;
  width: 100%;
}

.cloumn-info-container {
  position: absolute;
  left: 50px;
  top: 5px;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.cloumn-info {
  position: absolute;
  left: 0px;
  top: 0px;
  display: flex;
  flex-direction: row;
  overflow: hidden;
}

.cloumn-123 {
  background-color: rgba(0,0,0,0);
  border-color: rgb(34,34,34);
  border-style: none;
  border-width: 2px;
  color: rgb(51,51,51);
  font-size: 16px;
  font-weight: bold;
  height: 22px;
  line-height: 22px;
  margin-left: 0;
  margin-top: 0;
  opacity: 1;
  text-align: left;
  position: absolute;
  left: 30px;
  top: 10px;
  margin-right: 0;
}