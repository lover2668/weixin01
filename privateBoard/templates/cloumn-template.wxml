<template name="cloumnTemplate">
  <view class="classification-cloumn" >
    <view class="cloumn-list" wx:for="{{cloumnData.cloumnData.content}}" wx:for-item="item" wx:key="unique" >
      <view class="cloumn-img-container">
        <image class="cloumn-img" src="{{item.pic}}" mode='scaleToFill'></image>
      </view>
      <view class="cloumn-info-container">
        <text class="cloumn-info"> {{item.title}} </text>
      </view>
    </view>
  </view>
  <view class="cloumn-123">
  </view>
</template>