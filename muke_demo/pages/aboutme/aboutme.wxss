/* pages/aboutme/aboutme.wxss */
page{
  background: #f3f3f3;
}
.banner{
  display: block;
  width: 100%;
  height: 340rpx;
}
.block{
  background: #Fff;
}
.block-title{
  position: relative;
  font-size: 34rpx;
  line-height: 1.5;
  color: #2e5e86;
  padding: 10rpx 50rpx;
}
.block-title::after{
  content: '';
  position: absolute;
  left: 18rpx;
  top: 18rpx;
  width: 10rpx;
  height: 40rpx;
  background: #2e5e86;
}
.block-desc{
  display: block;
  color: #666;
  line-height: 1.6;
  font-size: 30rpx;
  padding: 0 30rpx 30rpx;
}