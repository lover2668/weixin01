page {
  padding-bottom: 60px;
  background-color: #f3f3f3;
}
.takeoutTitle{
  padding:30rpx;
  background-color:#fff;
}
.takeoutTitle image {
  width: 70rpx;
  height: 70rpx;
  vertical-align: middle;
  margin-right: 20rpx;
  border-radius: 4px;
}
.takeoutTitle text{
  vertical-align: middle;
  font-weight: 400;
  font-size: 32rpx;
}
.makeCom-item {
  padding:30rpx 0;
  background-color:#fff;
  margin:0 30rpx;
  border-bottom:1px dashed #f3f3f3;
}
.makeCom-item:last-child{
  border-bottom: none;
}
.makeCommentLeval {
  display: inline-block;
  height:80rpx;
}
.makeCommentLeval .active{
  color: #ff7100;
}
.makeCom-goods-cover {
  width: 80px;
  height: 80px;
  border-radius: 4px;
  margin-right: 10px;
  vertical-align: top;
}
.icon-fullstar {
  margin-left: 12rpx;
  font-size: 34rpx;
}
.makeCom-textarea {
  display:inline-block;
  width:calc(100% - 10px);
  font-size:13px;
  min-height:90px;
  background-color:#eee;
  border-radius: 4px;
  color: #999;
  padding:5px;
}
.makeCom-textarea:focus {
  outline: none;
}
.makeCom-upload-pic {
  position: relative;
  display: inline-block;
  width: 220rpx;
  height: 220rpx;
  color: #d9d9d9;
  font-size: 12px;
  border: 2rpx solid #d9d9d9;
  border-radius: 4px;
  text-align: center;
  vertical-align: middle;
}
.makeCom-upload-pic view {
  font-size: 56rpx;
  margin-bottom:20rpx;
  margin-top:56rpx;
}
.makeCom-upload-pic input {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.makeCom-goods-comment .makeCom-pic-container {
  padding:30rpx 0;
}
.makeCom-level-container {
  display: flex;
  display: -webkit-flex;
  display: -moz-flex;
  display: -o-flex;
  margin: 0 -10px;
  border-top: 1px solid #ddd;
}
.makeCom-level-span {
  flex: 1;
  -webkit-flex: 1;
  -moz-flex: 1;
  -o-flex: 1;
  line-height: 40px;
  text-align: center;
}
.makeCom-level-span label {
  display: inline-block;
  width: 26px;
  height: 24px;
  font-size: 18px;
  line-height:1;
  vertical-align: middle;
}
.makeCom-level-span.active .icon-positive,
.makeCom-level-span.active .icon-negative,
.makeCom-level-span .icon-positive-active,
.makeCom-level-span .icon-neutral-active,
.makeCom-level-span .icon-negative-active {
  display: none;
}
.makeCom-level-span.active .icon-positive-active,
.makeCom-level-span.active .icon-neutral-active,
.makeCom-level-span.active .icon-negative-active {
  display: inline-block;
}
.makeCom-level-span[data-level="1"].active {
  color: #eb5a09;
}
.makeCom-level-span[data-level="2"].active {
  color: #ffb033;
}
.makeCom-level-span[data-level="3"].active {
  color: #6c593b;
}
.makeCom-pic-wrap {
  position: relative;
  display: inline-block;
  width: 212rpx;
  height: 212rpx;
  border: 2px solid #ddd;
  vertical-align: middle;
  margin-right: 13rpx;
}
.makeCom-pic-wrap:nth-child(3n){
  margin-right: 0;
}
.makeCom-pic-container image {
  width: 100%;
  height: 100%;
}
.makeCom-remove-pic {
  position: absolute;
  top: -5px;
  right: -5px;
  width: 16px;
  height: 16px;
  font-size: 16px;
  text-align: center;
  line-height: 16px;
  border: 1px solid;
  border-radius: 50%;
  color: #999;
  background: #fff;
}
.makeCom-mark-container {
  display: inline-block;
  margin-left: 10px;
  font-size: 20px;
  color: #eee;
  vertical-align: middle;
}
.makeCom-mark-container .icon-star,
.makeCom-mark-container .icon-star-empty {
  display: inline-block;
  height: 30px;
  width: 40px;
  text-align: center;
}
.makeCom-mark-container .icon-star {
  color: #f0b127;
}
.makeCom-bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 1px solid #ddd;
}
.makeCom-make-comment {
  display:block;
  height:44px;
  float:right;
  width:184rpx;
  line-height:88rpx;
  padding:0;
  border-radius:0;
}
