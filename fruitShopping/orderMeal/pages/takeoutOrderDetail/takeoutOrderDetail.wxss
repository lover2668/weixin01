page {
  background-color: #f8f8f8;
  font-size: 31rpx;
  padding-bottom: 120rpx;
}
.page-top-nav {
  position: static;
  margin: 0;
}
.order-detail-section {
  margin-bottom: 18rpx;
  padding: 26rpx 0rpx;
  background: #fff;
  border-bottom: 1px dashed #f2f2f2;
  font-size:28rpx;
}
.orderDetail-goto-homepage .icon-rightarrow {
  position: absolute;
  display: block;
  right: 20rpx;
  font-size: 36rpx;
}
.takeoutInfo {
  background:#fff;
  padding:20rpx 30rpx 16rpx;
  text-align: center;
}
.takeoutImage {
  width: 128rpx;
  height: 128rpx;
  display: inline-block;
  border-radius: 50%;
}
.takeoutInfo view{
  font-size: 34rpx;
  color: #333;
  margin-top: 22rpx;
  margin-bottom: 20rpx;
  font-weight: 500;
}
.top-section {
  font-size: 36rpx;
  color: #fff;
  background-color: #535961;
}
.address-info-section {
  /*line-height: 44rpx;*/
  padding-top:26rpx;
  margin-top:-26rpx;
}
.orderDetail-pay-count {
  color: #d20e10;
}
.bottom-nav {
  padding: 20rpx 0;
  border-top: 1px solid #f2f2f2;
  color: #333;
  background-color: #fff;
}
.bottom-nav text {
  display: inline-block;
  margin-right: 20rpx;
}
.goods-cover, .goods-content, .goods-right {
  display: inline-block;
  vertical-align: top;
}
.goods-list-item {
  margin: 0;
  padding: 24rpx 0;
  border-bottom: 1px dashed #f2f2f2;
}
.goods-list-item:first-child {
  margin-top: -10rpx;
}
.goods-cover {
  width: 132rpx;
  height: 132rpx;
}
.goods-content {
  width: calc(100% - 180rpx);
  vertical-align:middle;
}
.icon-closes {
  color: #333;
  margin:0;
  box-sizing:content-box;
  font-size:26rpx;
  text-align:left;
  vertical-align:middle;
  border:none;
  line-height:26rpx;
}
.icon-closes:before {
  font-size: 16rpx;
}
.goods-seckill-content{
  width: 338rpx;
}
.goods-model {
  margin-top: 10rpx;
  color: #aaa;
}
.goods-right {
  width: 140rpx;
  text-align: right;
}
.goods-right view {
  display: inline-block;
}
.goods-seckill-right{
  width: 200rpx;
}
.freightAdress-tip {
  margin-top: 10px;
  margin-left: 6px;
  font-size: 12px;
  color: #999;
}
.freightAdress-ico {
  font-size:32rpx;
  margin:0 10rpx;
}
.freightAdress-phone {
  margin-top: 20rpx;
}
.location-name {
  text-decoration: underline;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: inline-block;
  width: 90%;
  overflow: hidden;
}
.btn {
  padding: 18rpx 30rpx;
  font-size: 28rpx;
  line-height: 1;
  border-radius: 2px;
}
.section-title, .section-content {
  display: inline-block;
  vertical-align: middle;
}
.section-title {
  width: 5em;
}
.section-content {
  margin-left: 2em;
  width: calc(100% - 7em);
  text-align: right;
}
.goods-seckill-price{
  font-size: 38rpx;
}
.goods-original-price{
  font-size: 29rpx;
  text-decoration: line-through;
  margin-left: 8rpx;
}
.goods-seckill-sign{
  font-size: 13px;
  color: #ff7100;
  margin-top: 5px;
}
