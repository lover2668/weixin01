.sort-container {
  display: flex;
  width: 100%;
  margin-top: 20rpx;
}

.sort-list{
    float:left;
    width:20%;
    box-sizing: border-box;
    padding-bottom:10px;
}

.sort-img{
    width:150rpx;
    height:145rpx;
    display:block;
    margin:0 auto;
    margin-bottom:5px;
    text-align: center;
}
.sort-desc{
    background-color:#ffffff;
    color:#333333;
    width:100%;
    text-align: center;
    display:block;
    font-size:8px;
}